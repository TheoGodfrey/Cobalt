{
  "mission_id": "lake_test_004",
  "mission_name": "Lake Test: Search, Deliver, RTB",
  "start_phase": "searching",
  "hub_failsafe": "RTH",
  "phases": {
    "searching": {
      "tasks": {
        "payload": {
          "action": "EXECUTE_SEARCH",
          "detector": "thermal_detector",
          "strategy": "lawnmower"
        }
      },
      "transitions": {
        "on_state:DELIVERING": {
          "payload": "goto:delivering"
        },
        "on_event:search_exhausted": {
          "payload": "goto:returning"
        }
      }
    },
    "delivering": {
      "tasks": {
        "payload": {
          "action": "EXECUTE_DELIVERY",
          "actuator": "payload_dropper",
          "strategy": "goto_target",
          "params": {
            "goto_target": {
              "target_x": 500.0,
              "target_y": 500.0,
              "altitude": 50.0
            }
          }
        }
      },
      "transitions": {
        "on_state:RETURNING": {
          "payload": "goto:returning"
        }
      }
    },
    "returning": {
      "tasks": {
        "payload": {
          "action": "EXECUTE_RTH",
          "strategy": "rth_strategy"
        }
      },
      "transitions": {
        "on_state:LANDING": {
          "payload": "goto:mission_complete"
        }
      }
    },
    "mission_complete": {
      "tasks": {
        "payload": {
          "action": "IGNORE"
        }
      }
    }
  }
}